<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-  include('./partials/head')%>

<body>
	<!-- Header -->
	<%-  include('./partials/headerLogueado')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar producto</h2>
			</div>
			<h2 class="col-12"> 
				<form action="/editProduct/<%= product.id %>?editar="  method="post">
					<label for="imagen">Imagen:</label><br>
					<input type="text" id="imagen" name="imagen" value="<%= (locals.old && locals.old.imagen !== undefined) ? locals.old.imagen : (product && product.imagen) %>" ><br>

					<label for="product">Producto:</label><br>
					<input type="text" id="product" name="product"  value="<%= (locals.old && locals.old.nombre !== undefined) ? locals.old.nombre : (product && product.nombre) %>"  ><br>

					<label for="descripcion">Descripci√≥n:</label><br>
					<input type="text" id="descripcion" name="descripcion" value="<%= (locals.old && locals.old.descripcion !== undefined) ? locals.old.descripcion : (product && product.descripcion) %>" ><br>

					<button type="submit">Editar producto</button>
                    <input type="hidden" name="id_usuario" >
                    </div>
				</form>
			</h2>
		</div>
	</div>

	<% if(locals.errors && errors.imagen){%>
		<p><%= errors.imagen.msg %></p>
	<% } %> 
	<% if(locals.errors && errors.product){%>
		<p><%= errors.product.msg %></p>
	<% } %> 
	<% if(locals.errors && errors.descripcion){%>
		<p><%= errors.descripcion.msg %></p>
	<% } %> 

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>