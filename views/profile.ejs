<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-  include('./partials/head')%>
<body>
	<!-- Header -->
	<%-  include('./partials/headerLogueado')%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= user.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= user.usuario %>
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<%= user.email %>
						<li><%=productos.length%> productos</li>
						<li>200 seguidores</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
					<h2 class="products-title"> Cantidad de productos cargados: productos.length </h2>
			</div>
			<!-- Show mis productos -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% for(let i=0; i<productos.length; i++){%>
						<a href="/product">
							<figure class="product-box_image">
								<img src=<%=productos[i].imagen%> alt="<%=productos[i].nombre%>">
							</figure>
							<article class="product-box_data">
								<a href='/product/id'><h2><%=productos[i].nombre%></h2></a>
								<!-- <p>Comentarios: 12</p> -->
							</article>
						</a>
					<%}%> 
				</section>
			</div>
		</div>
	</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>