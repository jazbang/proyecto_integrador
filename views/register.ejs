<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-  include('./partials/head')%>

<body>
	<!-- Header -->
	<%-  include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/users/register" method="post">
				<label for="email">Email:</label><br>
				<input type="email" id="email" name="email" value="" ><br>
				
				<label for="username">Usuario:</label><br>
				<input type="text" id="username" name="username" value="" ><br>

				<label for="contrasenia">Contrase√±a:</label><br>
				<input type="password" id="contrasenia" name="contrasenia" value="" ><br>

				<label for="nacimiento">Fecha de nacimiento:</label><br>
				<input type="date" id="nacimiento" name="nacimiento" value=""><br>

				<label for="dni">DNI:</label><br>
				<input type="number" id="dni" name="dni" value=""><br>

				<label for="foto">Foto de perfil (URL):</label><br>
				<input type="text" id="foto" name="foto" value=""><br>

				<button type="submit">Registrarse</button> 
			</form>
		</div>
	</div>
	<% if(locals.errors && errors.email){ %>
		<p><%= errors.email.msg %></p>
	<% } %>
	<% if(locals.errors && errors.contrasenia){ %>
		<p><%= errors.contrasenia.msg %></p>
	<% } %>
	<% if(locals.errors && errors.username){%>
		<p><%= errors.username.msg %></p>
	<%} %>
	<% if(locals.errors && errors.dni){%>
		<p><%= errors.dni.msg %></p>
	<%} %>
	<% if(locals.errors && errors.foto){%>
		<p><%= errors.foto.msg %></p>
	<%} %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>