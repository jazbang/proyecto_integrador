<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-  include('./partials/head')%>

<body>
	<!-- Header -->
	<%-  include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
            <% if (products != null){
                products = [products];
            }
            if (products && products.length > 0) {
                products.forEach(function(producto, index) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/id/<%= productos.id %>">
                            <figure class="product-box_image">
                                <img class="fotoIndex" src="<%= productos.imagen %>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= productos.nombre %></h2>
                                <p><%= productos.descripcion %></p>
                                <p>Comentarios: <%= productos.comentarios.length %></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% })} else {%>
                <h2>No hay resultados para su criterio de búsqueda.</h2>
            <% }%>
        </div>
    </div>
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>